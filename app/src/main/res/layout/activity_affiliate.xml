<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aaffiliate_layout"
    android:orientation="vertical"
    tools:context="in.jiyofit.basic_app.AffiliateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aaffiliate_tv_categoryselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fcategory_select"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/aaffiliate_dd_categories"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/aaffiliate_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"/>

</LinearLayout>
